<h1 class="center">Listing All Categories</h1>
<div class="center">
<ul class="listing">
  <% @categories.each do |category| %>
  <div class="row">
    <div class="well col-md-4 col-md-offset-4">
      <li class="article-title">
        <%= link_to "#{category.name}", category_path(category) %>
      </li>
      <li><small class="badge"><%= pluralize(category.articles.count, "article") %></small></li>
    </div>
  </div>
  <% end %>
</ul>
<%= will_paginate %>
</div>
